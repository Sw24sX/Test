<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

        <changeSet id="09-04-2023-12-30" author="KorolyovAS">
            <createTable tableName="user_info_role">
                <column name="role" type="varchar(50)">
                    <constraints nullable="false"/>
                </column>
                <column name="user_info_id" type="bigint">
                    <constraints nullable="false"/>
                </column>
            </createTable>

            <addUniqueConstraint tableName="user_info_role" columnNames="role, user_info_id"/>

            <addForeignKeyConstraint baseTableName="user_info_role"
                                     baseColumnNames="user_info_id"
                                     constraintName="user_info_role_user_info_fk"
                                     referencedTableName="user_info"
                                     referencedColumnNames="id"/>
        </changeSet>
</databaseChangeLog>